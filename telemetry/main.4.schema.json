{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://people.mozilla.org/~mreid/pipeline/schemas/main.4.schema.json",
  "type": "object",
  "name": "main",
  "allOf": [
    { "$ref": "common.4.schema.json#/definitions/common" },
    {
      "properties": {
        "meta": {
          "type": "object"
        },
        "payload": {
          "type": "object",
          "properties": {
            "addonDetails": {
              "type": "object",
              "properties": {}
            },
            "addonHistograms": {
              "type": "object",
              "properties": {}
            },
            "childPayloads": {
              "type": "array"
            },
            "chromeHangs": {
              "type": "object",
              "properties": {}
            },
            "fileIOReports": {
              "type": ["object", "null"],
              "properties": {}
            },
            "histograms": {
              "type": "object",
              "additionalProperties": {
                "$ref": "#/definitions/histogram"
              }
            },
            "info": {
              "type": "object",
              "properties": {}
            },
            "keyedHistograms": {
              "type": "object",
              "additionalProperties": {
                "additionalProperties": {
                  "$ref": "#/definitions/histogram"
                }
              }
            },
            "lateWrites": {
              "type": "object",
              "properties": {}
            },
            "log": {
              "type": [
                "array",
                "object"
              ]
            },
            "processes": {
              "type": "object",
              "properties": {
                "parent": {
                  "type": "object",
                  "properties": {
                    "scalars": {
                      "type": "object",
                      "additionalProperties": {
                        "$ref": "#/definitions/scalar"
                      }
                    }
                  },
                  "required": [
                    "scalars"
                  ]
                }
              },
              "required": [
                "parent"
              ]
            },
            "simpleMeasurements": {
              "type": "object",
              "properties": {}
            },
            "slowSQL": {
              "type": "object",
              "properties": {}
            },
            "slowSQLStartup": {
              "type": "object",
              "properties": {}
            },
            "threadHangStats": {
              "type": [
                "array",
                "object"
              ]
            },
            "UIMeasurements": {
              "type": [
                "array",
                "object"
              ]
            },
            "ver": {
              "type": "integer"
            },
            "webrtc": {
              "type": "object",
              "properties": {}
            }
          }
        },
        "type": {
          "type": "string",
          "enum": [
            "main",
            "saved-session"
          ]
        }
      }
    }
  ],
  "required": [
    "payload"
  ],
  "definitions": {
    "histogram": {
      "type": "object",
      "properties": {
        "bucket_count": {
          "type": "integer",
          "minimum": 0
        },
        "histogram_type": {
          "type": "integer",
          "minimum": 0
        },
        "log_sum": {
          "type": "number",
          "minimum": 0
        },
        "log_sum_squares": {
          "type": "number",
          "minimum": 0
        },
        "range": {
          "type": "array"
        },
        "sum": {
          "type": "integer",
          "minimum": 0
        },
        "sum_squares_hi": {
          "type": "integer",
          "minimum": 0
        },
        "sum_squares_lo": {
          "type": "integer",
          "minimum": 0
        },
        "values": {
          "type": "object"
        }
      },
      "additionalProperties": false
    },
    "scalar": {
      "type": ["integer", "string"]
    }
  }
}
