{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "https://raw.githubusercontent.com/mreid-moz/mozilla-pipeline-schemas/common/telemetry/crash.4.schema.json",
  "type": "object",
  "name": "crash",
  "allOf": [
    { "$ref": "common.4.schema.json#/definitions/common" },
    {
      "properties": {
        "payload": {
          "type": "object",
          "properties": {
            "crashDate": {
              "type": "string",
              "pattern": "^[0-9]{4}-[0-9]{2}-[0-9]{2}$"
            },
            "hasCrashEnvironment": {
              "type": "boolean"
            },
            "metadata": {
              "type": "object",
              "properties": {
                "AvailablePageFile": {
                  "type": "string"
                },
                "AvailablePhysicalMemory": {
                  "type": "string"
                },
                "AvailableVirtualMemory": {
                  "type": "string"
                },
                "BuildID": {
                  "type": "string"
                },
                "IsGarbageCollecting": {
                  "type": "string"
                },
                "ProductID": {
                  "type": "string"
                },
                "ProductName": {
                  "type": "string"
                },
                "ReleaseChannel": {
                  "type": "string"
                },
                "SecondsSinceLastCrash": {
                  "type": "string"
                },
                "SystemMemoryUsePercentage": {
                  "type": "string"
                },
                "TotalPageFile": {
                  "type": "string"
                },
                "TotalPhysicalMemory": {
                  "type": "string"
                },
                "TotalVirtualMemory": {
                  "type": "string"
                },
                "Version": {
                  "type": "string"
                }
              }
            },
            "version": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1
            }
          }
        },
        "type": {
          "type": "string",
          "enum": [ "crash" ]
        }
      }
    }
  ]
}
