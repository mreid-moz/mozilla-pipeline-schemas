{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://jsonschema.net",
  "type": "object",
  "properties": {
    "description": {"type": "string"},
    "doclink":     {"type": "string", "format": "uri"},
    "host":        {"type": "string", "format": "hostname"},
    "port":        {"type": "integer"},
    "username":    {"type": "string"},
    "password":    {"type": "string"},
    "db_name":     {"type": "string"}
  },
  "required": [
    "description",
    "doclink",
    "host",
    "port",
    "username",
    "password",
    "db_name"
  ]
}
